{
  "manifest_version": 3,
  "name": "Language Learning Extension",
  "version": "1.0",
  "description": "A Chrome extension for language learning.",
  "permissions": [
    "storage",
    "downloads",
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["*://*/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
              "style.css"
            ]
        }
    ]
}
